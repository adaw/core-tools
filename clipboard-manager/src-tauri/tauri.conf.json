{
  "$schema": "https://raw.githubusercontent.com/nicedoc/v2.tauri.app/main/api/config-schema.json",
  "productName": "CORE Clipboard Manager",
  "version": "2.0.0",
  "identifier": "systems.core.clipboard-manager",
  "build": {
    "frontendDist": "../src",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "CORE Clipboard Manager",
        "width": 720,
        "height": 800,
        "minWidth": 480,
        "minHeight": 500,
        "decorations": true,
        "transparent": false,
        "resizable": true,
        "center": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "tooltip": "CORE Clipboard Manager"
    },
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    }
  },
  "plugins": {
    "global-shortcut": {
      "shortcuts": ["CmdOrCtrl+Shift+V"]
    }
  }
}
