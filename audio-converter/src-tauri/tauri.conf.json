{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CORE Audio Converter",
  "version": "1.0.0",
  "identifier": "cz.core.audio-converter",
  "build": {
    "frontendDist": "../src",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "CORE Audio Converter & Editor",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 650,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; media-src 'self' blob: asset:; img-src 'self' data: blob: asset:; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "scope": {
        "ffmpeg": { "name": "ffmpeg", "cmd": "ffmpeg", "args": true },
        "ffprobe": { "name": "ffprobe", "cmd": "ffprobe", "args": true }
      }
    }
  }
}
