{
  "$schema": "https://raw.githubusercontent.com/nicedishy/tauri-v2-schema/main/tauri.conf.json",
  "productName": "CORE Media Converter",
  "version": "1.0.0",
  "identifier": "systems.core.media-converter",
  "build": {
    "frontendDist": "../src",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "CORE Media Converter",
        "width": 1100,
        "height": 750,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; img-src 'self' data: blob:;"
    }
  },
  "plugins": {
    "dialog": {},
    "shell": {
      "open": true
    }
  }
}
