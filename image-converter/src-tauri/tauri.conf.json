{
  "$schema": "https://raw.githubusercontent.com/nickel-org/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "CORE Image Converter",
  "version": "2.0.0",
  "identifier": "cz.core.image-converter",
  "build": {
    "frontendDist": "../src",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "title": "CORE Image Converter",
    "windows": [
      {
        "title": "CORE Image Converter",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost blob: data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    }
  },
  "plugins": {
    "dialog": {},
    "shell": {
      "open": true
    }
  }
}
