{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/schema.json",
  "productName": "Image Converter",
  "version": "1.0.0",
  "identifier": "cz.core.image-converter",
  "build": {
    "frontendDist": "../src",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "Image Converter",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "dialog": {
      "open": true,
      "save": true
    },
    "fs": {
      "scope": {
        "allow": ["**"],
        "deny": []
      }
    }
  }
}
