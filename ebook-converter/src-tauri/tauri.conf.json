{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "eBook Converter",
  "version": "0.1.0",
  "identifier": "cz.core.ebook-converter",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "eBook Converter â€” CORE Tools",
        "width": 1100,
        "height": 750,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "ebook-convert",
          "cmd": "ebook-convert",
          "args": true
        },
        {
          "name": "ebook-meta",
          "cmd": "ebook-meta",
          "args": true
        },
        {
          "name": "calibredb",
          "cmd": "calibredb",
          "args": true
        }
      ]
    }
  }
}
