{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "eBook Converter capabilities",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "shell:default",
    "shell:allow-open",
    "shell:allow-execute",
    "shell:allow-spawn",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        { "name": "ebook-convert", "cmd": "ebook-convert", "args": true },
        { "name": "ebook-meta", "cmd": "ebook-meta", "args": true }
      ]
    }
  ]
}
